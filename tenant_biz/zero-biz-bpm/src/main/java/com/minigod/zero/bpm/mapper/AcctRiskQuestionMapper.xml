<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.bpm.mapper.AcctRiskQuestionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="acctRiskQuestionResultMap" type="com.minigod.zero.bpm.entity.AcctRiskQuestionEntity">
        <result column="id" property="id"/>
        <result column="question_id" property="questionId"/>
        <result column="question" property="question"/>
        <result column="sort" property="sort"/>
        <result column="lang" property="lang"/>
        <result column="question_type" property="questionType"/>
        <result column="opt_type" property="optType"/>
        <result column="check_type" property="checkType"/>
        <result column="flag" property="flag"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectAcctRiskQuestionPage" resultMap="acctRiskQuestionResultMap">
        select * from acct_risk_question where is_deleted = 0
    </select>

    <select id="findQuestion" parameterType="com.minigod.zero.bpm.vo.request.RiskEvaluationReqVo" resultType="com.minigod.zero.bpm.vo.response.FundRiskQuestionVo">
           SELECT question_id questionId,question FROM acct_risk_question
		   WHERE flag = 0 AND question_type = #{questionType} AND LOWER(lang) = 'zh-hans' ORDER BY sort
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.bpm.mapper.AcctRiskQuestionOptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="acctRiskQuestionOptionResultMap" type="com.minigod.zero.bpm.entity.AcctRiskQuestionOptionEntity">
        <result column="id" property="id"/>
        <result column="question_id" property="questionId"/>
        <result column="sort" property="sort"/>
        <result column="option_value" property="optionValue"/>
        <result column="lang" property="lang"/>
        <result column="option_score" property="optionScore"/>
        <result column="option_id" property="optionId"/>
        <result column="flag" property="flag"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectAcctRiskQuestionOptionPage" resultMap="acctRiskQuestionOptionResultMap">
        select * from acct_risk_question_option where is_deleted = 0
    </select>

    <select id="getQuestionOption" parameterType="com.minigod.zero.bpm.vo.request.RiskEvaluationReqVo" resultType="com.minigod.zero.bpm.vo.response.FundRiskQuestionOptionVo">
            SELECT question_id questionId,option_id optionId,option_value optionValue,option_score optionScore FROM acct_risk_question_option
			WHERE flag = 0 AND question_id = #{questionId} AND LOWER(lang) = 'zh-hans' AND option_id = #{optionId} LIMIT 1
    </select>
</mapper>

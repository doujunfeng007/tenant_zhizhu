<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.minigod.zero.manage.mapper.OperateRuleRewardRelationMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.minigod.zero.manage.entity.OperateRuleRewardRelationEntity">
        <id column="id" property="id"/>
        <result column="rule_id" property="ruleId"/>
        <result column="reward_id" property="rewardId"/>
        <result column="claim_type" property="claimType"/>
        <result column="reward_num" property="rewardNum"/>
        <result column="validity_day" property="validityDay"/>
        <result column="stocks_open_day" property="stocksOpenDay"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="create_dept" property="createDept"/>
        <result column="status" property="status"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , rule_id, reward_id, claim_type, reward_num, validity_day, stocks_open_day,
        create_time, update_time, create_user, update_user, is_deleted,
        tenant_id, create_dept, status
    </sql>

    <!-- 分页查询 -->
    <select id="queryPage" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM operate_rule_reward_relation
        WHERE is_deleted = 0
        <if test="ruleId != null">
            AND rule_id = #{ruleId}
        </if>
        <if test="claimType != null">
            AND claim_type = #{claimType}
        </if>
        ORDER BY create_time DESC
    </select>

    <!-- 查询规则下的奖励配置 -->
    <select id="queryByRuleId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM operate_rule_reward_relation
        WHERE is_deleted = 0
        AND status = 0
        AND rule_id = #{ruleId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询奖品关联的规则 -->
    <select id="queryByRewardId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM operate_rule_reward_relation
        WHERE is_deleted = 0
        AND status = 0
        AND reward_id = #{rewardId}
        ORDER BY create_time DESC
    </select>

    <!-- 查询规则奖励关系 -->
    <select id="findOperateRuleRewardRelation" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM operate_rule_reward_relation
        WHERE is_deleted = 0
        AND status = 0
        AND rule_id = #{ruleId}
        AND reward_id is not null
    </select>

    <!-- 批量更新规则奖励关系状态 -->
    <update id="updateStatusByRuleId">
        UPDATE operate_rule_reward_relation
        SET status      = #{status},
            update_time = NOW()
        WHERE rule_id = #{ruleId}
          AND is_deleted = 0
    </update>
    <!-- 删除规则奖励关系 -->
    <update id="deleteOperateRuleRewardRelation">
        UPDATE operate_rule_reward_relation SET is_deleted = 1
        WHERE rule_id IN
        <foreach collection="ruleIds" item="ruleId" open="(" separator="," close=")">
            #{ruleId}
        </foreach>
    </update>

</mapper>

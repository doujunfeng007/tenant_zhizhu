<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.platform.mapper.PlatformPushMsgHistoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="pushMsgHistoryResultMap" type="com.minigod.zero.platform.entity.PlatformPushMsgHistoryEntity">
        <result column="id" property="id"/>
        <result column="temp_code" property="tempCode"/>
        <result column="os_type" property="osType"/>
        <result column="msg_group" property="msgGroup"/>
        <result column="target_id" property="targetId"/>
        <result column="content" property="content"/>
        <result column="send_status" property="sendStatus"/>
        <result column="send_time" property="sendTime"/>
        <result column="relation_id" property="relationId"/>
        <result column="create_user" property="createUser"/>
        <result column="create_dept" property="createDept"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
        <result column="status" property="status"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="msg_id" property="msgId"/>

    </resultMap>

    <select id="selectPushMsgHistoryPage" resultMap="pushMsgHistoryResultMap">
        select * from platform_push_msg_history where is_deleted = 0
    </select>

    <insert id="saveNotifyMsg" parameterType="java.util.List">
        INSERT INTO
        platform_push_msg_history(
            id,
            temp_code,
            os_type,
            msg_group,
            target_id,
            content,
            send_status,
            send_time,
            relation_id,
            create_user,
            create_dept,
            create_time,
            update_user,
            update_time,
            `status`,
            is_deleted,msg_id,device_id,tenant_id
        )
        VALUES
        <foreach collection="msgSends" item="notifyMsg" index="index" separator=",">
        (
            #{notifyMsg.id},
            #{notifyMsg.tempCode},
            #{notifyMsg.osType},
            #{notifyMsg.msgGroup},
            #{notifyMsg.targetId},
            #{notifyMsg.content},
            #{notifyMsg.sendStatus},
            #{notifyMsg.sendTime},
            #{notifyMsg.relationId},
            #{notifyMsg.createUser},
            #{notifyMsg.createDept},
            #{notifyMsg.createTime},
            #{notifyMsg.updateUser},
            #{notifyMsg.updateTime},
            #{notifyMsg.status},
            #{notifyMsg.isDeleted},#{notifyMsg.msgId},#{notifyMsg.deviceId},#{notifyMsg.tenantId}
        )
        </foreach>
    </insert>

    <update id="updateByMsgId" parameterType="com.minigod.zero.platform.entity.PlatformPushMsgHistoryEntity">
        update platform_push_msg_history
        set relation_id = #{relationId} ,send_status = #{sendStatus},update_time = now(),channel = #{channel}
        where msg_id = #{msgId}
    </update>
</mapper>

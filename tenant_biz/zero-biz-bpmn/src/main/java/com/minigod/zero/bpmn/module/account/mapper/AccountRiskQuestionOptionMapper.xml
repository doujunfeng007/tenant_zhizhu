<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.bpmn.module.account.mapper.AccountRiskQuestionOptionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="acctRiskQuestionOptionResultMap" type="com.minigod.zero.bpmn.module.account.entity.AccountRiskQuestionOptionEntity">
        <result column="id" property="id"/>
        <result column="question_id" property="questionId"/>
        <result column="sort" property="sort"/>
        <result column="option_value" property="optionValue"/>
        <result column="lang" property="lang"/>
        <result column="option_score" property="optionScore"/>
        <result column="option_id" property="optionId"/>
        <result column="flag" property="flag"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <select id="selectAcctRiskQuestionOptionPage"
            parameterType="com.minigod.zero.bpmn.module.account.dto.AccountRiskQuestionOptionDTO"
            resultMap="acctRiskQuestionOptionResultMap">
        SELECT id,
               question_id,
               sort,
               option_value,
               lang,
               option_score,
               option_id,
               flag,
               create_time,
               update_time
        FROM acct_risk_question_option
        WHERE is_deleted = 0
    </select>

    <select id="selectAcctRiskQuestionOptionList" parameterType="java.lang.Long"
            resultMap="acctRiskQuestionOptionResultMap">
        SELECT id,
               question_id,
               sort,
               option_value,
               lang,
               option_score,
               option_id,
               flag,
               create_time,
               update_time
        FROM acct_risk_question_option
        WHERE is_deleted = 0
          AND question_id = #{questionId}
    </select>

    <select id="getQuestionOption" resultType="com.minigod.zero.bpmn.module.account.vo.FundRiskQuestionOptionVO">
        SELECT question_id  AS questionId,
               option_id    AS optionId,
               option_value AS optionValue,
               option_score AS optionScore
        FROM acct_risk_question_option
        WHERE flag = 0
          AND is_deleted = 0
          AND question_id = #{questionId}
          AND LOWER(lang) = #{lang}
          AND option_id = #{optionId} LIMIT 1
        ORDER BY sort
    </select>
</mapper>

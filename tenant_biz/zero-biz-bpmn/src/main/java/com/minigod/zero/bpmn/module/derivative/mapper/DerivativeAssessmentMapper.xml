        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="custId != null">#{custId,jdbcType=BIGINT},</if>
            <if test="tenantId != null">#{tenantId,jdbcType=VARCHAR},</if>
            <if test="optionItem != null">#{optionItem,jdbcType=VARCHAR},</if>
            <if test="optionValue != null">#{optionValue,jdbcType=VARCHAR},</if>
            <if test="createTime != null">#{createTime,jdbcType=TIMESTAMP},</if>
            <if test="updateTime != null">#{updateTime,jdbcType=TIMESTAMP},</if>
        </trim>
    </insert>
    <insert id="batchInsert" parameterType="map">
        insert into derivative_knowledge_assessment
        (cust_id,tenant_id ,option_item,option_value,create_time ,update_time)
        values
        <foreach collection="assessmentEntities" item="item" separator=",">
            (#{item.custId,jdbcType=BIGINT},#{item.tenantId,jdbcType=VARCHAR}
            ,#{item.optionItem,jdbcType=VARCHAR},#{item.optionValue,jdbcType=VARCHAR},#{item.createTime,jdbcType=TIMESTAMP}
            ,#{item.updateTime,jdbcType=TIMESTAMP})
        </foreach>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.minigod.zero.bpmn.module.derivative.entity.DerivativeAssessmentEntity">
        update derivative_knowledge_assessment
        <set>
            <if test="custId != null">
                cust_id = #{custId,jdbcType=BIGINT},
            </if>
            <if test="tenantId != null">
                tenant_id = #{tenantId,jdbcType=VARCHAR},
            </if>
            <if test="optionItem != null">
                option_item = #{optionItem,jdbcType=VARCHAR},
            </if>
            <if test="optionValue != null">
                option_value = #{optionValue,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where   id = #{id,jdbcType=BIGINT}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.minigod.zero.bpmn.module.derivative.entity.DerivativeAssessmentEntity">
        update derivative_knowledge_assessment
        set
            cust_id =  #{custId,jdbcType=BIGINT},
            tenant_id =  #{tenantId,jdbcType=VARCHAR},
            option_item =  #{optionItem,jdbcType=VARCHAR},
            option_value =  #{optionValue,jdbcType=VARCHAR},
            create_time =  #{createTime,jdbcType=TIMESTAMP},
            update_time =  #{updateTime,jdbcType=TIMESTAMP}
        where   id = #{id,jdbcType=BIGINT}
    </update>
</mapper>

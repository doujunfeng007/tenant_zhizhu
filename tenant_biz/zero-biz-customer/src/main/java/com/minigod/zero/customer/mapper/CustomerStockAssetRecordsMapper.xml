<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.customer.mapper.CustomerStockAssetRecordsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="stockAssetRecordsResultMap" type="com.minigod.zero.customer.entity.CustomerStockAssetRecordsEntity">
        <result column="id" property="id"/>
        <result column="cust_id" property="custId"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="trade_account" property="tradeAccount"/>
        <result column="fund_account" property="fundAccount"/>
        <result column="trade_date" property="tradeDate"/>
        <result column="exchange_type" property="exchangeType"/>
        <result column="stock_code" property="stockCode"/>
        <result column="stock_name" property="stockName"/>
        <result column="money_type" property="moneyType"/>
        <result column="begin_amount" property="beginAmount"/>
        <result column="current_amount" property="currentAmount"/>
        <result column="frozen_amount" property="frozenAmount"/>
        <result column="unfrozen_amount" property="unfrozenAmount"/>
        <result column="cost_price" property="costPrice"/>
        <result column="stock_mkt_value" property="stockMktValue"/>
        <result column="refer_profit_cost" property="referProfitCost"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectCustomerStockAssetRecordsPage" resultMap="stockAssetRecordsResultMap">
        select * from customer_stock_asset_records where is_deleted = 0
    </select>


</mapper>

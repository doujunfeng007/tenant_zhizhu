<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.customer.mapper.CustomerTradeSubAccountMapper">

    <resultMap id="BaseResultMap" type="com.minigod.zero.customer.entity.CustomerTradeSubAccountEntity">
        <id column="id" property="id" />
        <result column="trade_account_id" property="tradeAccountId" />
        <result column="account_id" property="accountId" />
        <result column="trade_account" property="tradeAccount" />
        <result column="sub_account" property="subAccount" />
        <result column="market_type" property="marketType" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="is_deleted" property="isDeleted" />
         <result column="is_master" property="isMaster" />
    </resultMap>

    <sql id="Base_Column_List">
        id, trade_account_id, account_id, trade_account, sub_account, market_type,
        create_time, update_time, is_deleted,is_master
    </sql>

    <select id="selectByTradeAccount" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM customer_trade_sub_account
        WHERE trade_account = #{tradeAccount}
        AND is_deleted = 0
    </select>

    <select id="selectByAccountId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM customer_trade_sub_account
        WHERE account_id = #{accountId}
        AND is_deleted = 0
    </select>
</mapper>

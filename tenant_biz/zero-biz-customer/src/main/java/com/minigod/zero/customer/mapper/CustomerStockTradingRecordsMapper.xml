<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.customer.mapper.CustomerStockTradingRecordsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="stockTransactionRecordsResultMap" type="com.minigod.zero.customer.entity.CustomerStockTradingRecordsEntity">
        <result column="id" property="id"/>
        <result column="cust_id" property="custId"/>
        <result column="trade_account" property="tradeAccount"/>
        <result column="fund_account" property="fundAccount"/>
        <result column="trade_date" property="tradeDate"/>
        <result column="exchange_type" property="exchangeType"/>
        <result column="stock_code" property="stockCode"/>
        <result column="trade_kind" property="tradeKind"/>
        <result column="entrust_way" property="entrustWay"/>
        <result column="money_type" property="moneyType"/>
        <result column="business_amount" property="businessAmount"/>
        <result column="business_balance" property="businessBalance"/>
        <result column="business_price" property="businessPrice"/>
        <result column="fee_count" property="feeCount"/>
        <result column="profit_fee_count" property="profitFeeCount"/>
        <result column="other_fee_count" property="otherFeeCount"/>
        <result column="occur_balance" property="occurBalance"/>
        <result column="sequence_no" property="sequenceNo"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectCustomerStockTransactionRecordsPage" resultMap="stockTransactionRecordsResultMap">
        select * from customer_stock_trading_records where is_deleted = 0
    </select>


</mapper>

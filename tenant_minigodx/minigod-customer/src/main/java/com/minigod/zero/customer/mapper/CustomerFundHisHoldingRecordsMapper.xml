<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.customer.mapper.CustomerFundHisHoldingRecordsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="fundHisHoldingRecordsResultMap" type="com.minigod.zero.customer.entity.CustomerFundHisHoldingRecordsEntity">
        <result column="id" property="id"/>
        <result column="cust_id" property="custId"/>
        <result column="product_code" property="productCode"/>
        <result column="product_name" property="productName"/>
        <result column="markt_code" property="marktCode"/>
        <result column="buy_time" property="buyTime"/>
        <result column="buy_num" property="buyNum"/>
        <result column="buy_price" property="buyPrice"/>
        <result column="sell_time" property="sellTime"/>
        <result column="sell_num" property="sellNum"/>
        <result column="sell_price" property="sellPrice"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <select id="selectCustomerFundHisHoldingRecordsPage" resultMap="fundHisHoldingRecordsResultMap">
        select * from customer_fund_his_holding_records where is_deleted = 0
    </select>

    <select id="selectBySubAccountList" resultMap="fundHisHoldingRecordsResultMap" parameterType="java.util.List">
        select * from customer_fund_his_holding_records
        where sub_account_id in
        <foreach item="item" index="index" collection="subAccountList" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>

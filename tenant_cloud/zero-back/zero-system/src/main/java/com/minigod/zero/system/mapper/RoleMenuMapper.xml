<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.minigod.zero.system.mapper.RoleMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="roleMenuResultMap" type="com.minigod.zero.system.entity.RoleMenu">
        <id column="id" property="id"/>
        <result column="menu_id" property="menuId"/>
        <result column="role_id" property="roleId"/>
    </resultMap>

    <select id="selectRoleMenuPage" resultMap="roleMenuResultMap">
        select * from zero_role_menu where is_deleted = 0
    </select>


    <insert id="insertBatch" parameterType="java.util.List" >
        insert  into zero_role_menu(
            menu_id,
            role_id
        )VALUES
        <foreach collection="roleMenuList" item="item" index="index" separator=",">
            (
            #{item.menuId},
            #{item.roleId}
            )
        </foreach>

    </insert>
</mapper>
